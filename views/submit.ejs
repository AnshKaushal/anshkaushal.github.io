<%- include ('partials/header') %>
<h1 style="font-size: 3rem; text-align: center; margin-top: 2rem">
  Submit your photos here!
</h1>

<div class="cont">
    <form method="POST" action="/submit" enctype="multipart/form-data">
        <label for="fileInput">Choose an image to upload : </label>
        <input type="file" name="image" id="fileInput" accept="image/*" required><br><br>
        <label for="nameInput">Your Name : </label>
        <input type="text" name="name" id="nameInput" required><br><br>
        <button type="submit">Upload</button>
      </form>
</div>

